<h1>Add new concert</h1>
<% if @concert.errors.any? %>
	<ul>
		<% @concert .errors.full_messages.each do |error_msg| %>
		<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for @concert do |f| %>
	<%= f.label :artist %>
	<%= f.text_field :artist %>
	<br>
	<br>
	<%= f.label :venue %>
	<%= f.text_field :venue %>
	<br>
	<br>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<br>
	<br>
	<%= f.label :date %>
	<%= f.date_field :date %>
	<br>
	<br>
	<%= f.label :price %>
	<%= f.text_field :price %>
	<br>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<br>
	<%= f.button %>
<% end %>